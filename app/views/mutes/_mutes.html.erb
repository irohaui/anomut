<ul class="media-list">
  <% mutes.each do |mute| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(mute.user, { size: 50} )%>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to mute.user.name, user_path(mute.user) %> <span class="text-muted">posted at <%= mute.created_at %></span>
        </div>
        <div>
          <p><%= mute.content %></p>
        </div>
        <div>
          <% if current_user == mute.user %>
            <%= link_to "Delete", mute, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-danger btn-xs" %>
          <% end %>
        </div>
      </div>
    </li>
    <% end %>
    <%= paginate mutes %>
</ul>
